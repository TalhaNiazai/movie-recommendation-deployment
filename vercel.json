{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python",
        "includeFiles": [
          "requirements.txt",
          "runtime.txt",
          "app.py",
          "database.py",
          ".env"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "REDIS_HOST": "@redis-host",
    "REDIS_PORT": "@redis-port",
    "REDIS_PASSWORD": "@redis-password",
    "PORT": "5000"
  }
}
